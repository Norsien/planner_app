#:kivy 2.1.0

<DrawingPlane>:
    size_hint: (None, None)
    width: max(backgroundImage.width, root.width, 1680)
    height: max(backgroundImage.height, root.height, 1050)

    do_rotation: False
    borderVisible: False

    backgroundImage: backgroundImage.__self__

    VisualWidgetBorder:
        border_color: .8, .8, .2, 1
        opacity: int(root.borderVisible)

    Image:
        id: backgroundImage
        size_hint: (None, None)
        pos_hint: {"center_x": .5, "center_y": .5}

        size: self.texture_size
        source: "tmp_graphics/pic1.jpg"
        color: [1, 1, 1, 0.4]

        VisualWidgetBorder:
            border_color: .2, .8, .8, .2
            opacity: int(root.borderVisible)