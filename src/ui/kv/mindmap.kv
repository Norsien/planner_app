#:kivy 2.1.0

<MainScreen>:
    toolBar: toolBar.__self__
    leftSideBar: leftSideBar.__self__
    rightSideBar: rightSideBar.__self__
    bottomBar: bottomBar.__self__
    drawRegion: drawRegion.__self__

    GridLayout:
        rows: 3
        ToolBar:
            id: toolBar
        GridLayout:
            cols: 3
            LeftSideBar:
                id: leftSideBar
            DrawRegion:
                id: drawRegion
                mainScreen: root
            RightSideBar:
                id: rightSideBar
        BottomBar:
            id: bottomBar
            mainScreen: root

<ToolBar@Widget>:
    size_hint: (1, None)
    height: 18
    canvas:
        Color:
            rgb: .7, .7, .7
        Rectangle:
            size: self.size
            pos: self.pos

<WidgetBox@AnchorLayout>:
    size_hint:(None, None)  
