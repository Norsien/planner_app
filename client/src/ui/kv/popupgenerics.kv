#:kivy 2.1.0

<ErrorPopup>:
    size_hint: (None, None)
    size: (460, 180)
    title: "Error!"
    separator_color: 1, .3, .3, 1
    title_color: 1, .3, .3, 1
    title_size: "16sp"
    BoxLayout:
        orientation: "vertical"
        Label:
            text: root.message
            text_size: self.size
            valign: "top"
            padding_x: 5
            padding_y: 10
        WidgetBox:
            size_hint: (1, .35)
            PopupButton:
                button_color: .3, .45, .6, 1
                default_color: .3, .45, .6, 1
                highlight_color: .45, .6, .8, 1
                size_hint: (.25, 1)
                text: "Ok"
                on_press: root.dismiss()

<PopupButton>:
    background_color: 1, 1, 1, 0
    color: 1, 1, 1, 1
    button_color: .45, .45, .45, 1
    default_color: .45, .45, .45, 1
    highlight_color: .6, .6, .6, 1
    canvas.before:
        Color:
            rgba: self.button_color
        Rectangle:
            size: self.size
            pos: self.pos