#:kivy 2.1.0

<MainScreen>:
    topBar: topBar.__self__
    nodeListSideBar: nodeListSideBar.__self__
    planeListSideBar: planeListSideBar.__self__
    rightSideBar: rightSideBar.__self__
    bottomBar: bottomBar.__self__
    drawRegion: drawRegion.__self__

    BoxLayout:
        orientation: "vertical"
        TopBar:
            id: topBar
            mainScreen: root
        BoxLayout:
            BoxLayout:
                size_hint: (None, 1)
                width: self.minimum_width
                orientation: "vertical"
                PlaneListSideBar:
                    id: planeListSideBar
                    mainScreen: root
                NodeListSideBar:
                    id: nodeListSideBar
                    mainScreen: root
            DrawRegion:
                id: drawRegion
                mainScreen: root
            RightSideBar:
                id: rightSideBar
                mainScreen: root
        BottomBar:
            id: bottomBar
            mainScreen: root

<WidgetBox@AnchorLayout>:
    size_hint:(None, None)  
