#:kivy 2.1.0

<DrawingPlane>:
    size_hint: (None, None)
    size: (1200, 800)

    do_rotation: False
    borderVisible: False

    backgroundImage: backgroundImage.__self__

    VisualWidgetBorder:
        border_color: .8, .8, .2, 1
        opacity: int(root.borderVisible)

    Image:
        id: backgroundImage
        allow_stretch: True
        keep_ratio: False
        size_hint: (None, None)
        pos_hint: {"center_x": .5, "center_y": .5}

        size: root.size
        source: "tmp_graphics/gradient.png"
        color: [1, 1, 1, 0.4]

        VisualWidgetBorder:
            border_color: .2, .8, .8, .2
            opacity: int(root.borderVisible)